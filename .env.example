# RTS Curator Recommendation System - Environment Configuration
# Copy this to .env and configure for your environment

# ---- General ----
APP_ENV=dev  # dev, staging, prod
APP_LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR

# ---- API Server (Development) ----
APP_API_HOST=127.0.0.1  # localhost - only accessible from this machine
APP_API_PORT=8000
APP_API_RELOAD=true  # Auto-reload on code changes
APP_API_WORKERS=1
APP_CORS_ORIGINS=["*"]  # Allow all origins in dev

# ---- TMDB API ----
APP_TMDB__API_KEY=your_tmdb_api_key_here
APP_TMDB__API_BASE_URL=https://api.themoviedb.org/3

# ---- Data Paths (optional overrides) ----
# APP_DATA_ROOT=data
# APP_MODELS_DIR=data/models

# ---- Reproducibility ----
APP_RANDOM_SEED=42
